<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite name="Walgreens" parallel="tests">
    <parameter name="useGrid" value="true"></parameter>

    <test name="test login">
        <parameter name="useDocker" value="true"></parameter>
        <parameter name="browser" value="firefox"></parameter>
        <classes>
            <class name="tests.TestLogin">
                <methods>
                    <include name="loginWithInValidCredentials"/>
                </methods>
            </class>
        </classes>
    </test>

    <test name="test login valid">
        <parameter name="useDocker" value="true"></parameter>
        <parameter name="browser" value="chrome"></parameter>
        <classes>
            <class name="tests.TestLogin">
                <methods>
                    <include name="loginWithValidCredentials"/>
                </methods>
            </class>
        </classes>
    </test>


</suite>